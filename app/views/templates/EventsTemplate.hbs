<div class="row">
	<div class="one half">
		<div>
			<h3>Aktuella matcher</h3>
			<div>
				<table class="table table-hover">
					{{#each Events}}
					<tr>
						<td>
							<b>{{home}} - {{away}} {{startAt}}</b>
							<div>{{sport}} {{country}} {{city}} {{league}}</div>
						</td>
						<td>
							<div class="btn-group">
							  <button type="button" class="btn btn-default">1</button>
							  <button type="button" class="btn btn-default">x</button>
							  <button type="button" class="btn btn-default">2</button>
							</div>
						</td>
					</tr>
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>